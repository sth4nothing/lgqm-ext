{
    "name": "临高启明论坛助手",
    "version": "{version}",
    "description": "临高启明论坛助手",
    "icons": {
        "200": "img/icon.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["js/bg.js"]
    },
    "options_page": "options.html",
    "permissions": ["https://www.lgqm.gq/", "https://www.lgqm.top/", "https://lgqm.gq/", "https://lgqm.top/", "notifications", "cookies", "contextMenus"],
    "browser_action": {
        "default_title": "",
        "default_icon": "img/icon.png",
        "default_popup": "options.html"
    },
    "content_scripts": [{
        "matches": ["https://www.lgqm.gq/*", "https://www.lgqm.top/*", "https://lgqm.gq/*", "https://lgqm.top/*"],
        "css": [],
        "js": ["js/page.js"]
    }],
    "manifest_version": 2
}